{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "types/**/*.ts",
        "types/**/*.d.ts"
    ]
}
